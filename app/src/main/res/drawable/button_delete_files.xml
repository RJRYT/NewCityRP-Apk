<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when pressed or focused (hover) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/themeColor" /> <!-- Background color on click -->
            <stroke android:width="2dp" android:color="@color/themeColor" /> <!-- Red border -->
            <corners android:radius="20dp" /> <!-- Curved corners -->
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <padding
        android:left="15.0dip"
        android:top="15.0dip"
        android:right="15.0dip"
        android:bottom="15.0dip" />
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="@color/themeColor" /> <!-- Red border -->
            <corners android:radius="20dp" /> <!-- Curved corners -->
        </shape>
    </item>

</selector>