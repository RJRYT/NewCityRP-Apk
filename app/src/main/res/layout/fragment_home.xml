<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logoround"
        android:layout_marginBottom="8dp"/>

    <!-- App Name -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_long"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="24dp"/>

    <!-- Game Status Label -->
    <TextView
        android:id="@+id/gameStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Status"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#555555"
        android:layout_marginBottom="8dp"/>

    <!-- Status Text with Dynamic Underline -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking"
        android:textSize="16sp"
        android:padding="4dp"
        android:textColor="#333333"
        android:background="@drawable/status_border"
        android:layout_marginBottom="16dp"/>

    <!-- Update Game Button -->
    <Button
        android:id="@+id/updateGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Game"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:visibility="gone"/>
</LinearLayout>
