<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">
 
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logoround"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_long"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/gameStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Status"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardStrokeWidth="2dp"
        app:cardCornerRadius="8dp"
        app:cardStrokeColor="@color/themeColor"
        app:cardBackgroundColor="@android:color/transparent">

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Checking"
            android:textSize="16sp"
            android:padding="4dp"
            android:textColor="@color/textColorPrimary" />
            
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Game"
        android:textSize="20sp"
        style="@style/OutlinedCurvedButton"
        android:visibility="gone"/>
</LinearLayout>
