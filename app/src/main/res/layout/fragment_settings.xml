<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:padding="16dp"
     android:orientation="vertical">

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center"
         android:textSize="25sp"
         android:paddingBottom="20dp"
         android:textAllCaps="true"
         android:paddingTop="20dp"
         android:id="@+id/textSettingsTitle"
         android:text="Settings"
         android:textStyle="bold" />

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="8dp"
         android:orientation="horizontal"
         android:paddingBottom="30dp"
         android:paddingTop="20dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="28sp"
             android:layout_weight="1"
             android:text="Autoaim" />

        <Switch
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/toggleAutoaim" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="8dp"
         android:orientation="horizontal"
         android:paddingBottom="30dp"
         android:paddingTop="20dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="28sp"
             android:layout_weight="1"
             android:text="Timestamp" />

        <Switch
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/toggleTimestamp" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="8dp"
         android:orientation="horizontal"
         android:paddingBottom="30dp"
         android:paddingTop="20dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="28sp"
             android:layout_weight="1"
             android:text="Display FPS" />

        <Switch
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/toggleDisplayFPS" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="8dp"
         android:orientation="horizontal"
         android:paddingBottom="30dp"
         android:paddingTop="20dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="28sp"
             android:layout_weight="1"
             android:text="Voice Chat" />

        <Switch
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/toggleVoiceChat" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="8dp"
         android:orientation="horizontal"
         android:paddingBottom="30dp"
         android:paddingTop="20dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="28sp"
             android:layout_weight="1"
             android:text="Fastconnect" />

        <Switch
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/toggleFastConnect" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="8dp"
         android:orientation="horizontal"
         android:paddingBottom="30dp"
         android:paddingTop="20dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="28sp"
             android:layout_weight="1"
             android:text="FPS Limit" />

        <SeekBar
             android:layout_height="wrap_content"
             android:layout_width="150dp"
             android:max="2"
             android:id="@+id/seekBarFpsLimit" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="20sp"
             android:id="@+id/seekBarFpsLimitValue"
             android:text="30" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="8dp"
         android:orientation="horizontal"
         android:paddingBottom="30dp"
         android:paddingTop="20dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="28sp"
             android:layout_weight="1"
             android:text="Chat Strings" />

        <SeekBar
             android:layout_height="wrap_content"
             android:layout_width="150dp"
             android:max="2"
             android:id="@+id/seekBarChatStrings" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="20sp"
             android:id="@+id/seekBarChatStringsValue"
             android:text="5" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:textAlignment="center"
         android:padding="8dp"
         android:orientation="horizontal"
         android:paddingBottom="15dp"
         android:paddingTop="20dp">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="28sp"
             android:layout_weight="1"
             android:id="@+id/textGameType"
             android:text="Game type: Full" />

        <Button
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="20sp"
             android:id="@+id/buttonDeleteFiles"
             android:text="Delete game" />

    </LinearLayout>

</LinearLayout>