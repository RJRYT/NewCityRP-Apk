<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@drawable/bg_gradient"
     tools:context=".SplashScreenActivity">

    <ImageView
         android:layout_height="200dp"
         android:layout_width="200dp"
         android:layout_centerInParent="true"
         android:src="@drawable/splash_icon"
         android:contentDescription="@string/app_name_long"
         android:id="@+id/logoImage" />

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_below="@id/logoImage"
         android:textSize="24sp"
         android:layout_centerHorizontal="true"
         android:textColor="@color/textColorSecondary"
         android:layout_marginTop="8dp"
         android:id="@+id/server_name_text"
         android:text="@string/app_name_long" />

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="20dp"
         android:gravity="center"
         android:orientation="vertical"
         android:layout_alignParentBottom="true"
         android:id="@+id/bottom_layout">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginBottom="8dp"
             android:gravity="center"
             android:textSize="14sp"
             android:textColor="@color/textColorSecondary"
             android:id="@+id/version_text" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:orientation="horizontal">

            <ImageView
                 android:layout_height="25dp"
                 android:layout_width="25dp"
                 android:src="@drawable/ic_discord"
                 android:contentDescription="@string/discord_icon_desc"
                 android:layout_margin="8dp"
                 android:id="@+id/discord_icon" />

            <ImageView
                 android:layout_height="25dp"
                 android:layout_width="25dp"
                 android:src="@drawable/ic_whatsapp"
                 android:contentDescription="@string/whatsapp_icon_desc"
                 android:layout_margin="8dp"
                 android:id="@+id/whatsapp_icon" />

            <ImageView
                 android:layout_height="25dp"
                 android:layout_width="25dp"
                 android:src="@drawable/ic_youtube"
                 android:contentDescription="@string/youtube_icon_desc"
                 android:layout_margin="8dp"
                 android:id="@+id/youtube_icon" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>