<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="16dp"
         android:orientation="vertical">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center_vertical"
             android:orientation="horizontal">

            <ImageView
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:layout_marginBottom="8dp"
                 android:src="@drawable/logoround"
                 android:contentDescription="App Logo"
                 android:id="@+id/infoAppLogo" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:textSize="22sp"
                 android:textColor="@android:color/black"
                 android:id="@+id/infoServerTitle"
                 android:textStyle="bold"
                 android:text="Server Title" />

        </LinearLayout>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="16sp"
             android:id="@+id/infoDescription"
             android:paddingTop="8dp"
             android:text="Description" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="16sp"
             android:id="@+id/infoCreatedAt"
             android:paddingTop="8dp"
             android:text="Created At" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="16sp"
             android:id="@+id/infoOwners"
             android:paddingTop="8dp"
             android:text="Owners" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="16sp"
             android:id="@+id/infoServerVersion"
             android:paddingTop="8dp"
             android:text="Server Version" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="16sp"
             android:id="@+id/infoLinks"
             android:paddingTop="8dp"
             android:text="Links" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="16sp"
             android:layout_marginTop="16dp"
             android:id="@+id/infoAppBuildVersion"
             android:text="App Build Version" />

    </LinearLayout>

</ScrollView>