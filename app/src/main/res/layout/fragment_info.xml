<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="16dp"
         android:orientation="vertical">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center_vertical"
             android:orientation="horizontal">

            <ImageView
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:src="@drawable/logoround"
                 android:contentDescription="App Logo"
                 android:id="@+id/infoAppLogo" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:textSize="22sp"
                 android:paddingStart="10dp"
                 android:id="@+id/infoServerTitle"
                 android:textStyle="bold"
                 android:text="@string/app_name_long" />

        </LinearLayout>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="10dp"
             android:textSize="16sp"
             android:id="@+id/infoDescription"
             android:text="" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="8dp"
             android:textSize="16sp"
             android:id="@+id/infoCreatedAt"
             android:text="" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:padding="8dp"
             android:textSize="16sp"
             android:id="@+id/infoServerVersion"
             android:text="" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="18sp"
             android:layout_marginTop="16dp"
             android:id="@+id/infoOwnersTitle"
             android:text=""
             android:textStyle="bold" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:id="@+id/infoOwnersContainer"
             android:paddingTop="8dp">

        </LinearLayout>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="18sp"
             android:layout_marginTop="16dp"
             android:id="@+id/infoLinksTitle"
             android:text=""
             android:textStyle="bold" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:paddingVertical="8dp"
             android:orientation="horizontal"
             android:id="@+id/infoLinksContainer">

        </LinearLayout>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="16sp"
             android:paddingBottom="16dp"
             android:textColor="@color/textColorSecondary"
             android:layout_marginTop="24dp"
             android:layout_gravity="center_horizontal"
             android:id="@+id/infoAppBuildVersion"
             android:text="v1" />

    </LinearLayout>

</ScrollView>